<!DOCTYPE html>
<html>
    <head>
        {% block head %}
			<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
            <title>{% block title %}{% endblock %}</title>
            <script src="http://ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js"></script>
			<script>
			  WebFont.load({
			    google: {
			      families: ['gotham-black', 'gotham-bold', 'gotham-light', 'publicoheadline-blackitalic', 'publicoheadline-bold', 'publicoheadline-roman', 'publicoheadline-medium', 'publicotext-roman', 'gothamnarrow-black', 'gothamnarrow-light', 'gothamnarrow-bold']
			    }
			  });
			</script>
			{% block javascript %}
				<script src="{{ design }}/javascripts/jquery-2.0.2.min.js"></script>
				<script src="{{ design }}/javascripts/script.js"></script>
			{% endblock %}
			{% block stylesheet %}
				<link rel="stylesheet" href="{{ design }}/stylesheets/fonts.css">
				<link rel="stylesheet" href="{{ design }}/stylesheets/base.css">
				<link rel="stylesheet" href="{{ design }}/stylesheets/content.css">
				<link rel="stylesheet" href="{{ design }}/stylesheets/landscape.css">
			{% endblock %}
        {% endblock %}
    </head>
    <body class="{% block bodyclass %}{% endblock %} mode-{{ mode }} landscape text-size-{{ fontSize }} {{ platform }}" id="story">
        {% block content %}{% endblock %}
    </body>
</html>