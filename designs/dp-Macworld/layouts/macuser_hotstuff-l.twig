{% extends "index.twig" %}

{% block title %}{{ story.title }}{% endblock %}

{% block javascript %}
{{ parent() }}
{% endblock %}

{% block stylesheet %}
{{ parent() }}
<link rel="stylesheet" href="{{ design }}/stylesheets/macuser_hotstuff.css">
{% endblock %}

{% block bodyclass %}color_{{ section.color }}{% endblock %}
{% block bodyid %}story{% endblock %}

{% block content %}
<div id="t1" layout="macuser_hotstuff" init="off" class="landscape macuser_hotstuff keep-first-image">
	<div class="header">
		<div class="banner">
			<span class="logo">MAC USER</span>
		</div>
		<h2 class="title">
			Hot Stuff
		</h2>
	</div>
	{% if story.image|length > 0%}
	<div class="cover">
		<div class="banner">
			<span class="logo">MAC USER</span>
		</div>
		<div class="head-info">
			<h2 class="title">
				{{ story.title }}
			</h2>
			{% if story.intro != '' %}
			<p class="intro">{{ story.intro }} 
			</p>
			{% endif %}
		</div>
	</div>
	{% endif %}
	<div class="container">
		<div class="content-area" id="pagination">
			<div class="content-body">
				{{ story.body }}
			</div>
			<div class="content-page"></div>
		</div>
	</div>
	<div class="footer">
		<div class="nav-dots">
			<span class="dot"></span>
			<span class="dot active"></span>
			<span class="dot"></span>
		</div>

		<div class="wrapper clearfix" style="display:none;">
			<div class="page_info">
				Page <span id="c-page">1</span> of <span id="t-page">1</span>
			</div>
			<div class="pagination clearfix">
				<a href="#" class="go-prev" data-rel="amreader:go-prev">Previous Story</a>
				<a href="#" class="go-next" data-rel="amreader:go-next">Next Story</a>
			</div>
		</div>
	</div>
</div>
{% endblock %}
