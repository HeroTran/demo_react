{% extends "index.twig" %}

{% block title %}{{ story.title }}{% endblock %}

{% block javascript %}
{{ parent() }}
{% endblock %}

{% block stylesheet %}
{{ parent() }}
<link rel="stylesheet" href="{{ design }}/stylesheets/ioscentral_appstore.css">
{% endblock %}

{% block bodyclass %}color_{{ section.color }}{% endblock %}
{% block bodyid %}story{% endblock %}

{% block content %}
<div id="t1" layout="ioscentral_appstore" init="off" class="portrait ioscentral_appstore full-screen">
	<div class="header">
	</div>
	{% if story.image|length > 0%}
	<div class="cover">
		<div class="banner">
			<span class="logo">IOS CENTRAL</span>
			{% if story.intro != '' %}
			<p class="subtitle">{{ story.sub_title }}</p>
			{% endif %}
			<h2 class="title">{{ story.title }}</h2>
		</div>
		<div class="default-image masked" style="background-image: url('{{story.image.image_url}}')">
			<img src="{{story.image.image_url}}">
		</div>
 		<div class="head-info">
			<p class="strap-line">{{ story.strap_line }}</p>
			{% if story.intro != '' %}
			<p class="intro">{{ story.intro }}</p>
			{% endif %}
		</div>
		<div class="icon">
		</div>
	</div>
	{% endif %}
	<div class="container">
		<div class="icon">
		</div>
		<div class="content-area" id="pagination">
			<div class="content-body">
				{{ story.body }}
				{% set credit = "" %}
				{% if story.image.source != "" %}
				{% set credit = credit ~ story.image.source %}
				{% endif %}
				{% if credit and credit != "" %}
					<span class="photo-credit">{{credit}}</span>
				{% endif %}
			</div>
		</div>
	</div>
	<div class="footer">

		<div class="wrapper clearfix" style="display:none;">
			<div class="page_info">
				Page <span id="c-page">1</span> of <span id="t-page">1</span>
			</div>
			<div class="pagination clearfix">
				<a href="#" class="go-prev" data-rel="amreader:go-prev">Previous Story</a>
				<a href="#" class="go-next" data-rel="amreader:go-next">Next Story</a>
			</div>
		</div>
	</div>
</div>
{% endblock %}
