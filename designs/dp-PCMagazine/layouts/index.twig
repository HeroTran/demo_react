<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <title>{% block title %}{% endblock %}</title>
			{% block javascript %}
			<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
			<script src="{{ design }}/javascripts/script.js"></script>
			{% endblock %}
			{% block stylesheet %}
			<link rel="stylesheet" href="{{ design }}/stylesheets/base.css">
			<link rel="stylesheet" href="{{ design }}/stylesheets/common.css">
			<link rel="stylesheet" href="{{ design }}/stylesheets/font.css">
			<link rel="stylesheet" href="{{ design }}/stylesheets/color.css">
			{% endblock %}
        {% endblock %}
    </head>
    <body class="{% block bodyclass %}{% endblock %} mode-{{ mode }} text-size-{{ fontSize }} {{ platform }}" id="{% block bodyid %}{% endblock %}">
        {% block content %}{% endblock %}
    </body>
</html>